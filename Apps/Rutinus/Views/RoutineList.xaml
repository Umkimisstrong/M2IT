<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Rutinus.ViewModels"
    xmlns:models="clr-namespace:Rutinus.Models"
    x:Class="Rutinus.RoutineList"
    x:DataType="viewmodels:RoutineListViewModel"
    Title="루틴 목록">

    <VerticalStackLayout Padding="20,10" Spacing="10">

        <Button Text="루틴 생성하기"
                Clicked="ToolbarItem_Clicked"
                MaximumWidthRequest="200"
                HorizontalOptions="End" />

        <!-- ✅ Pull-to-Refresh -->
        <RefreshView
            IsRefreshing="{Binding IsRefreshing}"
            Command="{Binding RefreshCommand}">

            <CollectionView
                ItemsSource="{Binding Routines}"
                SelectionMode="Single"
                SelectionChanged="OnRoutineSelected">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:RoutineModel">
                        <Border Stroke="Gray"
                                StrokeThickness="1"
                                Background="#FFF"
                                StrokeShape="RoundRectangle 8"
                                Padding="10"
                                Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding RoutineName}" FontSize="20" />
                                <Label Text="{Binding RoutineDescription}" FontSize="14" TextColor="Gray" />
                                <Label Text="{Binding RoutinePart}" FontSize="14" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

    </VerticalStackLayout>
</ContentPage>