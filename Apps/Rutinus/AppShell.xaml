<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Rutinus.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Rutinus"
    Title="Rutinus">

    <!-- App.Shell 을 사용하여 Navigating 할 수 있게 한다. -->
    <ShellContent
        Title="홈"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="루틴 목록"
        ContentTemplate="{DataTemplate local:RoutineList}"
        Route="RoutineList"
        />
    <ShellContent
        Title="루틴 저장"
        ContentTemplate="{DataTemplate local:RoutineSave}"
        Route="RoutineSave"
        />

</Shell>
